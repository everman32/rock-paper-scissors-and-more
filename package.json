{
  "name": "rock-papper-scissors",
  "version": "1.0.0",
  "description": "Console application, which is the well-known rock-paper-scissors game with additions",
  "main": "src/index.js",
  "type": "module",
  "scripts": {
    "start": "node src/index.js",
    "lint": "eslint src/**/* --ext .js",
    "lint:fix": "npm run lint -- --fix",
    "prit": "prettier --check src/**/*.js",
    "prit:fix": "prettier --write src/**/*.js",
    "prepare": "husky install"
  },
  "keywords": [
    "rock-papper-scissors",
    "nodejs",
    "console"
  ],
  "author": "Victor Borodyn",
  "license": "MIT",
  "dependencies": {
    "crypto": "^1.0.1",
    "crypto-random-string": "^4.0.0",
    "prompt-sync": "^4.2.0",
    "readline-sync": "^1.4.10",
    "word-table": "^1.0.3"
  },
  "devDependencies": {
    "eslint": "^8.19.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-sonarjs": "^0.16.0",
    "eslint-plugin-unicorn": "^44.0.2",
    "husky": "^8.0.1",
    "prettier": "^2.7.1"
  }
}
